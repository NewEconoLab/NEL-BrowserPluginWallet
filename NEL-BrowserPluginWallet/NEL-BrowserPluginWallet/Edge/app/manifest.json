{
    "author": "Qingmingzi",
    "name": "NELPluginWallet",
    "version": "1.0",
    "manifest_version": 2,
    "description": "A Browser Plugin Wallet for NEO",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "19": "NEL_19.png",
            "38": "NEL_38.png"
        },
        "default_title": "NELPluginWallet",
        "default_popup": "main.html"
    },
    "permissions": [
        "nativeMessaging",
        "tabs",
        "*://localhost/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://localhost/*"
            ],
            "js": [
                "jquery-3.2.1.min.js",
                "jquery.jsonrpc.js",
                "contentscript.js"
            ]
        }
    ],
    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}